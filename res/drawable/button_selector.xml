<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape>
			<solid
				android:color="#774401" />
			<stroke
				android:width="1dp"
				android:color="#171717" />
			<corners
				android:radius="4dp" />
			<padding
				android:left="10dip"
				android:top="10dip"
				android:right="10dip"
				android:bottom="10dip" />
		</shape>
	</item>
	<item>
		<shape android:layout_marginBottom="25dip">
			<gradient
				android:startColor="#9E5A02"
				android:endColor="#2A1800"
				android:angle="270" />
			<stroke
				android:width="1dp"
				android:color="#171717" />
			<corners
				android:radius="6dp" />
			<padding
				android:left="10dip"
				android:top="10dip"
				android:right="10dip"
				android:bottom="10dip" />
		</shape>
	</item>
</selector>